   <extension point="org.eclipse.ui.menus">
      <menuContribution
      	    locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
         <menu
               id="net.certiv.xvisitordt.ui.popups.menu"
               label="XVisitor">
            <command
                  commandId="net.certiv.xvisitordt.ui.cleanGrammarCommand"
                  id="net.certiv.xvisitordt.ui.popups.cleanGrammarCommand">
               <visibleWhen
                     checkEnabled="false">
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <and>
                           <test
                                 property="org.eclipse.core.resources.name"
                                 value="*.xv">
                           </test>
                        </and>
                     </adapt>
                  </iterate>
               </visibleWhen>
            </command>
