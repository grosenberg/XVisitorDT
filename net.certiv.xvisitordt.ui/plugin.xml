   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.certiv.xvisitordt.ui.editor.XVisitorEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="xv"
            icon="icons/obj16/xvisitorFile.png"
            id="net.certiv.xvisitordt.ui.editor.XVisitorEditor"
            name="XVisitor Editor">
         <contentTypeBinding
               contentTypeId="net.certiv.xvisitordt.core.contentType">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="2"
            markerType="net.certiv.xvisitordt.core.problem"
            name="net.certiv.xvisitordt.ui.error"
            super="org.eclipse.ui.workbench.texteditor.error">
      </type>
      <type
            markerSeverity="1"
            markerType="net.certiv.xvisitordt.core.problem"
            name="net.certiv.xvisitordt.ui.warning"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
      <type
            markerSeverity="0"
            markerType="net.certiv.xvisitordt.core.problem"
            name="net.certiv.xvisitordt.ui.info"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
      <type
            name="net.certiv.xvisitordt.ui.occurrences">
      </type>
   </extension>
  <extension
        point="org.eclipse.ui.editors.templates">
     <include
           file="src/main/resources/templates/templatesXVisitor.xml"
           translations="src/main/resources/templates/templates.properties">
     </include>
     <contextType
           class="net.certiv.xvisitordt.ui.templates.XVisitorTemplateContextType"
           id="net.certiv.xvisitordt.ui.DefaultContext"
           name="Default">
     </contextType>
      <contextType
            class="net.certiv.xvisitordt.ui.templates.XVisitorTemplateContextType"
            id="xvisitorGrammar"
            name="Grammar">
      </contextType>
      <contextType
            class="net.certiv.xvisitordt.ui.templates.XVisitorTemplateContextType"
            id="antlrOptions"
            name="Options">
      </contextType>
      <contextType
            class="org.eclipse.jdt.internal.corext.template.java.JavaContextType"
            id="java"
            name="Actions">
      </contextType>
      <contextType
            class="org.eclipse.jdt.internal.corext.template.java.JavaDocContextType"
            id="javadoc"
            name="Doc">
      </contextType>
      <resolver
            class="net.certiv.xvisitordt.ui.templates.VocabName"
            contextTypeId="antlrOptions"
            description="Proper name of the Tokens Vocabulary file"
            icon="icons/elcl16/templateprop_co.gif"
            name="Tokens Vocab Name"
            type="vocabName">
      </resolver>
  </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="net.certiv.certivtools.wizards"
            class="net.certiv.xvisitordt.ui.wizards.NewXVisitorWizard"
            icon="icons/obj16/xvisitorFile.png"
            id="net.certiv.xvisitordt.ui.wizards.NewXVisitorWizard"
            name="New XVisitor grammar">
         <description>
            Creates a new XVisitor grammar file.
         </description>
      </wizard>
   </extension>

   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="net.certiv.xvisitordt.ui.astview"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>

