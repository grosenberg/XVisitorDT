   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="XVisitorEditor Context"
            id="net.certiv.xvisitordt.ui.xvisitorEditorScope"
            name="XVisitorEditor Content"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
   
      <extension
         point="org.eclipse.ui.commands">
      <category
            name="XVisitor Source"
            description="XVisitor Source Actions"
            id="net.certiv.xvisitordt.ui.category.source">
      </category>
      <command
            name="Format"
            description="Format Source"
            categoryId="net.certiv.xvisitordt.ui.category.source"
            id="net.certiv.xvisitordt.ui.edit.text.format">
      </command>
      <command
            name="Comment/Uncomment"
            description="Comment/Uncomment the selected lines"
            categoryId="net.certiv.xvisitordt.ui.category.source"
            id="net.certiv.xvisitordt.ui.edit.text.toggle.comment">
      </command>
      <command
            categoryId="net.certiv.xvisitordt.ui.category.source"
            description="Toggles mark occurrences"
            id="net.certiv.xvisitordt.ui.edit.text.toggleMarkOccurrences"
            name="Mark Occurrences">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:false"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <command
            categoryId="net.certiv.xvisitordt.ui.category.source"
            description="Manual build of XVisitor files in project"
            id="net.certiv.xvisitordt.ui.build"
            name="Manual Build">
      </command>
      <command
            categoryId="org.eclipse.ui.category.navigate"
            description="%ActionDefinition.openEditor.description"
            id="net.certiv.dsl.ui.edit.text.open.editor"
            name="%ActionDefinition.openEditor.name">
      </command>
   </extension>

